<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/xcaboquinho" />

            <TextView
                android:id="@+id/nameLanche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allerta"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/xcaboquinho"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@color/material_dynamic_neutral90"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="4.5dp">

                <ImageView
                    android:id="@+id/addIcon"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTintMode="add"
                    app:srcCompat="@drawable/add_svgrepo_com"
                    app:tint="@color/design_default_color_secondary_variant" />

                <TextView
                    android:id="@+id/qtd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="1" />

                <ImageView
                    android:id="@+id/addMinus"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTintMode="add"
                    app:srcCompat="@drawable/minus_sign_svgrepo_com"
                    app:tint="@color/red" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>